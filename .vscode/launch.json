  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug POC",
      "program": "${workspaceFolder}/POC/test.js"
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk=9235",
        "${workspaceRoot}/POC/node_modules/.bin/jest",
        "--runInBand",
        "-c",
        "${workspaceRoot}/POC/jest.config.js",
        "tests"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "port": 9235
    }
  ]
}